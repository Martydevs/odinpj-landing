<section class="hero-container">
  <div class="hero-content centered">
    <section class="hero-text">
      <h2>This website is awesome</h2>
      <p>
        This website has some subtext that goes here under the main title. <span></span> It's
        a smaller font and the color is lower contrast
      </p>
      <div class="signup-button">
        <button>Sign up</button>
      </div>
    </section>
    <section class="hero-image">
      <p>this is a placeholder for an image</p>
    </section>
  </div>
</section>

<style>
  .hero-container {
    background-color: transparent;
    width: 100%;
    height: 50vh;
  }

  .hero-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 5rem;
  }

  .hero-image {
    width: 600px;
    height: 200px;
    background-color: #E5E7EB;
    color: #1F2937;
    display: grid;
    place-content: center;
    border-radius: 10px;
  }

  .hero-text {
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
  }

  .hero-text h2 {
    font-size: 40px;
    font-weight: bolder;
    color: #F9FAF8;
    margin: 8px 0;
    line-height: 1.0;
  }

  span {
    display: block;
  }

  .signup-button {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin: 8px 0;
  }

  .signup-button > button {
    border-radius: 10px;
    padding: 8px;
    width: 100px;
    background-color: dodgerblue;
  }
</style>